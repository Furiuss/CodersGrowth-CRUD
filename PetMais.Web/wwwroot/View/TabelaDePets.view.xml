<mvc:View controllerName="sap.ui.petmais.controller.TabelaDePets"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table 
		id="petsTable" 
		items="{/pets}" 
		paste="onPaste" 
		ariaLabelledBy="title"
		>
