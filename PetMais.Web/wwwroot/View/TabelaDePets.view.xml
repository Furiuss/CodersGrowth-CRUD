			<Column width="6rem">
				<m:Label text="{i18n>lblId}" />
				<m:Text text="{id}" wrapping="false" />
			</Column>
			<Column width="11rem">
				<m:Label text="{i18n>lblNome}" />
					<m:Text text="{nome}" wrapping="false" />
			</Column>
			<Column width="11rem">
				<m:Label text="{i18n>lblTipo}" />
					<m:Text text="{tipo}" wrapping="false" />
			</Column>
			<Column width="11rem">
				<m:Label text="{i18n>lblCor}" />
					<m:Text text="{cor}" wrapping="false" />
			</Column>
			<Column width="11rem">
				<m:Label text="{i18n>lblSexo}" />
					<m:Text text="{sexo}" wrapping="false" />
			</Column>
