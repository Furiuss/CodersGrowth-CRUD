<mvc:View controllerName="sap.ui.petmais.controller.TabelaDePets"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	>	
	<Table id="petsTable" items="{/pets}">
		<headerToolbar>
			<Toolbar>
				<content>
					<Button icon="sap-icon://add" text="Adicionar Pet" press=".aoClicarBotaoAdicionar"/>
					<SearchField width="80%" placeholder="pesquisar" search=".aoPesquisar"/>
				</content>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="4rem">
				<Label text="Id"/>
			</Column>
			<Column>
				<Label text="Nome"/>
			</Column>
			<Column>
				<Label text="Tipo"/>
			</Column>
			<Column>
				<Label text="Cor"/>
			</Column>
			<Column>
				<Label text="Sexo"/>
			</Column>
			<Column>
				<Label text="Data de Nascimento"/>
			</Column>
			<Column>
				<Label text="Data de Cadastro"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{id}"/>
					<Text text="{nome}"/>
					<Image 
					src="{
							path: 'tipo',
							formatter: '.formatter.iconesTipo'
						}
					"/>
					<Text text="{cor}"/>
					<Image 
					src="{
							path: 'sexo',
							formatter: '.formatter.iconesSexo'
						}
					"/>
					<Text
							text="{path: 'dataDeNascimento',
												type: 'sap.ui.model.type.Date',
												 formatOptions: {
												 style: 'short',
												 source: {
												 	pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'
												 }
											}
							}"/>
					<Text 
							text="{path: 'dataDeNascimento',
												 type: 'sap.ui.model.type.Date',
													formatOptions: {
													style: 'short',
													source: {
														pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'
												}
						}
					}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>